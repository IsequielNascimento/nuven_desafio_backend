generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  datasets  Dataset[]
  queries   Query[]
  createdAt DateTime @default(now())
}

model Dataset {
  id        Int      @id @default(autoincrement())
  name      String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  records   Record[]
  createdAt DateTime @default(now())
}

model Record {
  id        Int      @id @default(autoincrement())
  dataset   Dataset  @relation(fields: [datasetId], references: [id])
  datasetId Int
  data      Json
  createdAt DateTime @default(now())
}

model Query {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  question  String
  answer    String
  createdAt DateTime @default(now())
}